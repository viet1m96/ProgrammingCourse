<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <File name="InfoFileAppender" fileName="${env:log_sv_info:-sv_info.log}" append="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level - %msg%n"/>
        </File>

        <File name="TraceFileAppender" fileName="${env:log_sv_error:-sv_error.log}" append="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level - %msg%n%throwable"/>
        </File>
    </Appenders>

    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="InfoFileAppender"/>
        </Root>

        <Logger name="TraceLogger" level="TRACE" additivity="false">
            <AppenderRef ref="TraceFileAppender"/>
        </Logger>
    </Loggers>
</Configuration>
