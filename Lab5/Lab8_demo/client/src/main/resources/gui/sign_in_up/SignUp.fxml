        <center>
            <VBox alignment="CENTER" prefWidth="400.0" spacing="20.0">
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                </padding>
                <VBox alignment="BASELINE_LEFT" spacing="20.0">
                    <TextField fx:id="usernameField" prefWidth="350.0" />
                    <Text fx:id="criteriaUsername" />
                </VBox>
                <VBox alignment="BASELINE_LEFT" spacing="20.0">
                    <PasswordField fx:id="passwordField" prefWidth="350.0" />
                    <Text fx:id="lengthText" layoutX="222.0" layoutY="174.0" wrappingWidth="197.0" />
                    <Text fx:id="lowerCaseText" layoutX="221.0" layoutY="196.0" />
                    <Text fx:id="upperCaseText" layoutX="220.0" layoutY="247.0" />
                    <Text fx:id="digitText" layoutX="222.0" layoutY="220.0" />
                    <Text fx:id="specialCharText" layoutX="221.0" layoutY="275.0" />
                </VBox>
                <Button fx:id="signUpSubmitButton" mnemonicParsing="false" onAction="#signUpButtonClicked"/>
